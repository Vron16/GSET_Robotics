/*
Room 409
Maze Code
*/

#define MAX 60
#define RATIO 2

int black, white, lightAvg, usAvg, dir; //if dir == 1, back; dir == -1, fwd

void displayNum(int n);
void calibration();
void switchDir();
task lineFollow();
task enterMaze();

task main(){
     calibration();
     StartTask(lineFollow);
     StartTask(enterMaze);
}

task enterMaze(){
     while(1){
         if(SENSOR_2 == usAvg){
              StopTask(lineFollow);
              break;
         }
     }
     
     void switchDir();
     OnFwdSync(OUT_AC,dir*50,0);
     Wait(5000);
     
     void switchDir();
     OnFwdSync(OUT_AC,dir*50,0);
     Wait(3000);
}

task lineFollow(){
     while(1){
          if(SENSOR_1 > lightAvg){
               OnFwd(OUT_A,MAX - dir*MAX*RATIO*(SENSOR_1 - lightAvg)/(white - lightAvg));
               OnFwd(OUT_C,MAX);
          }
          else if(SENSOR_1 <= lightAvg){
               OnFwd(OUT_C,MAX - dir*MAX*RATIO*(SENSOR_1 - lightAvg)/(black - lightAvg));
               OnFwd(OUT_A,MAX);
          }
     }
}

void switchDir(){
     if(dir == -1){
          RotateMotor(OUT_B,30,-180);
          dir = 1;
     }
     else if(dir == 1){
          RotateMotor(OUT_B,30,180);
          dir = -1;
     }

}

void displayNum(int n){ //displays a number
     ClearScreen();
     TextOut(0,2,NumToStr(n));
     Wait(1500);
     ClearScreen();
}

void calibration(){ //calibration of black, white, ultrasonic distance
     dir = -1;
     SetSensorLight(S1,1);
     TextOut(0,2,"Set black");
     Wait(3000);
     black = SENSOR_1;
     displayNum(black);
     TextOut(0,2,"Set white");
     Wait(3000);
     white = SENSOR_1;
     displayNum(white);

     lightAvg = (black + white) / 2;
     displayNum(lightAvg);
     
     SetSensorUltrasonic(S2);
     TextOut(0,2,"Set distance");

     usAvg = 0;

     for(int i = 0; i < 5; i++){
             usAvg += SENSOR_2;
     }

     usAvg /= 5.0;

     displayNum(usAvg);

     TextOut(0,2,"3"); //Here we go
     Wait(1000);
     ClearScreen();
     TextOut(0,2,"2");
     Wait(1000);
     ClearScreen();
     TextOut(0,2,"1");
     Wait(1000);
     ClearScreen();
     TextOut(0,2,"GO!");
     Wait(1000);
     ClearScreen();
}
