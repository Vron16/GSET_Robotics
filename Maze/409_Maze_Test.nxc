/*
Room 409
Maze Code
*/

#define MAX 60
#define RATIO 2
#define firstUS 18
#define turnUS 6

int black, white, lightAvg, dir; //if dir == 1, back; dir == -1, fwd

void displayNum(int n);
void calibration();
void switchDir();
task lineFollow();
task enterMaze();

task main(){
     calibration();
     Precedes(lineFollow,enterMaze);
}

task lineFollow(){
     while(SensorUS(S2) > firstUS){
          if(SENSOR_1 > lightAvg){
               OnFwd(OUT_A,dir*MAX - dir*MAX*RATIO*(SENSOR_1 - lightAvg)/(white - lightAvg));
               OnFwd(OUT_C,dir*MAX);
          }
          else if(SENSOR_1 <= lightAvg){
               OnFwd(OUT_C,dir*MAX - dir*MAX*RATIO*(SENSOR_1 - lightAvg)/(black - lightAvg));
               OnFwd(OUT_A,dir*MAX);
          }
     }
     
     OnFwd(OUT_AC,0);
     switchDir();
     OnFwd(OUT_AC,dir*MAX);
     Wait(3000);
     switchDir();
     OnFwd(OUT_AC,dir*MAX);
     Wait(3000);
}

void switchDir(){
     if(dir == -1){
          dir = 1;
          RotateMotor(OUT_B,30,-180);

     }
     else if(dir == 1){
          dir = -1;
          RotateMotor(OUT_B,30,180);
     }

}

void displayNum(int n){ //displays a number
     ClearScreen();
     TextOut(0,2,NumToStr(n));
     Wait(1500);
     ClearScreen();
}

void calibration(){ //calibration of black, white, ultrasonic distance
     dir = -1;
     SetSensorLight(S1,1);
     TextOut(0,2,"Set black");
     Wait(3000);
     black = SENSOR_1;
     displayNum(black);
     TextOut(0,2,"Set white");
     Wait(3000);
     white = SENSOR_1;
     displayNum(white);

     lightAvg = (black + white) / 2;
     displayNum(lightAvg);
     
     SetSensorUltrasonic(S2);

     TextOut(0,2,"3"); //Here we go
     Wait(1000);
     ClearScreen();
     TextOut(0,2,"2");
     Wait(1000);
     ClearScreen();
     TextOut(0,2,"1");
     Wait(1000);
     ClearScreen();
     TextOut(0,2,"GO!");
     Wait(1000);
     ClearScreen();
}
