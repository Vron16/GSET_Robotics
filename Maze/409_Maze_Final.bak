#define MAX -60
#define RATIO 2

int black, white, lightAvg;

void displayNum(int n);
void calibration();
task lineFollow();
task enterMaze();

task main(){
     calibration();
     StartTask(lineFollow);
     StartTask(enterMaze);
}

task enterMaze(){
     while(1){
         ;
     }
}

task lineFollow(){
     while(1){
          if(SENSOR_1 > avg){
               OnFwd(OUT_A,MAX - MAX*RATIO*(SENSOR_1 - avg)/(white-avg));
               OnFwd(OUT_C,MAX);
          }
          else if(SENSOR_1 <= avg){
               OnFwd(OUT_C,MAX - MAX*RATIO*(SENSOR_1 - avg)/(black-avg));
               OnFwd(OUT_A,MAX);
          }
     }
}

void displayNum(int n){
     ClearScreen();
     TextOut(0,2,NumToStr(n));
     Wait(1500);
}

void calibration(){ //calibration of black and white
     SetSensorLight(S1,1);
     TextOut(0,2,"Set black");
     Wait(3000);
     black = SENSOR_1;
     ClearScreen();
     TextOut(0,2,"Set white");
     Wait(3000);
     white = SENSOR_1;
     ClearScreen();

     lightAvg = (black + white) / 2;
     displayNum(black);
     displayNum(white);
     displayNum(lightAvg);

     TextOut(0,2,"3");
     Wait(1000);
     ClearScreen();
     TextOut(0,2,"2");
     Wait(1000);
     ClearScreen();
     TextOut(0,2,"1");
     Wait(1000);
     ClearScreen();
     TextOut(0,2,"GO!");
     Wait(1000);
     ClearScreen();
}
